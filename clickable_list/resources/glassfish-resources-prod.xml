<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN"
    "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
    <jdbc-connection-pool
        name="clickable_listPool"
        datasource-classname="com.mysql.jdbc.jdbc2.optional.MysqlDataSource"
        res-type="javax.sql.DataSource">
        <property name="database" value="jdbc:mysql:///clickable_list"/> <!-- HSQLDB uses database instead of url -->
        <property name="url" value="jdbc:mysql:///clickable_list"/>
        <property name="user" value="root"/>
        <property name="password" value="${MYSQL_ROOT_PASSWORD}"/> <!-- Use the value "()" for an empty password -->
    </jdbc-connection-pool>
    <jdbc-resource
        jndi-name="clickable_listDatasource"
        pool-name="clickable_listPool"
        enabled="true"
        object-type="user"/>
</resources>
